---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Page introuvable">
  <div class="error-page">
    <div class="error-page__content">
      <div class="error-page__code">404</div>
      <h1 class="error-page__title">Zone sécurisée</h1>
      <p class="error-page__text">
        Cette page n'existe pas ou vous n'avez pas les autorisations nécessaires.
      </p>
      <a href="/" class="error-page__link">Retour à l'accueil</a>
    </div>
    <div class="error-page__icon">
      <svg viewBox="0 0 120 120" fill="none">
        <path d="M60 10L95 30V70L60 110L25 70V30L60 10Z" stroke="currentColor" stroke-width="2" fill="none"/>
        <path d="M60 25L85 40V65L60 95L35 65V40L60 25Z" fill="rgba(30, 58, 95, 0.3)"/>
        <path d="M60 45V70" stroke="currentColor" stroke-width="4" stroke-linecap="round"/>
        <circle cx="60" cy="82" r="3" fill="currentColor"/>
      </svg>
    </div>
  </div>
</BaseLayout>

<style lang="scss">
  @use '../styles/variables' as *;

  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: $spacing-xl;
    position: relative;
    overflow: hidden;
  }

  .error-page__content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .error-page__code {
    font-family: $font-family-mono;
    font-size: clamp(6rem, 20vw, 12rem);
    font-weight: $font-weight-bold;
    line-height: 1;
    background: linear-gradient(180deg, $color-silver-light 0%, $color-text-muted 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0.15;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    user-select: none;
  }

  .error-page__title {
    font-size: $font-size-3xl;
    font-weight: $font-weight-semibold;
    color: $color-text-primary;
    margin-bottom: $spacing-md;
    position: relative;
  }

  .error-page__text {
    font-size: $font-size-base;
    color: $color-text-secondary;
    margin-bottom: $spacing-xl;
    max-width: 400px;
  }

  .error-page__link {
    display: inline-flex;
    align-items: center;
    gap: $spacing-sm;
    padding: $spacing-md $spacing-xl;
    background: $color-accent;
    color: #fff;
    font-size: $font-size-sm;
    font-weight: $font-weight-medium;
    text-decoration: none;
    border-radius: $radius-md;
    transition: background $transition-fast;

    &:hover {
      background: $color-accent-hover;
      color: #fff;
    }
  }

  .error-page__icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
    color: $color-silver;
    opacity: 0.08;
    pointer-events: none;

    svg {
      width: 100%;
      height: 100%;
    }
  }
</style>
