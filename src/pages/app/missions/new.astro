---
export const prerender = false;

import AppLayout from '../../../layouts/AppLayout.astro';
import { getEmployees, getStores } from '../../../lib/db';

const user = Astro.locals.user!;

const employees = getEmployees();
const stores = getStores();
const activeEmployees = employees.filter(e => e.active);

const missionTypes = [
  { value: 'INTERVENTION', label: 'Intervention', iconPath: '<polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>', description: 'Opération tactique' },
  { value: 'SURVEILLANCE', label: 'Surveillance', iconPath: '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" stroke="currentColor" stroke-width="2" fill="none"/><circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" fill="none"/>', description: 'Observation et renseignement' },
  { value: 'ESCORT', label: 'Escorte', iconPath: '<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2" fill="none"/>', description: 'Protection de personnes ou convoi' },
  { value: 'TRAINING', label: 'Entraînement', iconPath: '<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/><circle cx="12" cy="12" r="6" stroke="currentColor" stroke-width="2" fill="none"/><circle cx="12" cy="12" r="2" stroke="currentColor" stroke-width="2" fill="none"/>', description: 'Session de formation' },
  { value: 'PATROL', label: 'Patrouille', iconPath: '<circle cx="12" cy="8" r="5" stroke="currentColor" stroke-width="2" fill="none"/><path d="M3 21v-2a7 7 0 0 1 7-7h4a7 7 0 0 1 7 7v2" stroke="currentColor" stroke-width="2" fill="none"/>', description: 'Ronde et surveillance zone' },
];
---
<AppLayout title="Nouvelle mission" user={user}>
  <div class="new-mission-page">
    <div class="page-header">
      <a href="/app/missions" class="back-link">
        <svg viewBox="0 0 24 24" class="back-link__icon">
          <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
        </svg>
        Retour aux missions
      </a>
      <h1 class="page-title">Planifier une mission</h1>
    </div>

    <form class="mission-form" id="mission-form">
      <div class="form-grid">
        <div class="form-main">
          <div class="form-card">
            <h2 class="form-card__title">Informations générales</h2>

            <div class="form-group">
              <label class="form-label" for="name">Nom de la mission *</label>
              <input
                type="text"
                id="name"
                name="name"
                class="form-input"
                placeholder="Ex: Opération Delta"
                required
              />
            </div>

            <div class="form-group">
              <label class="form-label" for="description">Description</label>
              <textarea
                id="description"
                name="description"
                class="form-textarea"
                rows="3"
                placeholder="Objectifs et détails de la mission..."
              ></textarea>
            </div>

            <div class="form-group">
              <label class="form-label">Type de mission *</label>
              <div class="type-grid">
                {missionTypes.map((type, i) => (
                  <label class="type-option">
                    <input
                      type="radio"
                      name="type"
                      value={type.value}
                      required
                      checked={i === 0}
                    />
                    <div class="type-option__content">
                      <span class="type-option__icon">
                        <svg viewBox="0 0 24 24" class="type-option__icon-svg" set:html={type.iconPath} />
                      </span>
                      <span class="type-option__label">{type.label}</span>
                      <span class="type-option__desc">{type.description}</span>
                    </div>
                  </label>
                ))}
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label class="form-label" for="date">Date *</label>
                <input
                  type="date"
                  id="date"
                  name="date"
                  class="form-input"
                  required
                />
              </div>
              <div class="form-group">
                <label class="form-label" for="time">Heure *</label>
                <input
                  type="time"
                  id="time"
                  name="time"
                  class="form-input"
                  required
                />
              </div>
            </div>

            <div class="form-group">
              <label class="form-label" for="store">Antenne *</label>
              <select id="store" name="store" class="form-select" required>
                {stores.map(store => (
                  <option value={store.id}>{store.name} ({store.code})</option>
                ))}
              </select>
            </div>
          </div>

          <div class="form-card">
            <h2 class="form-card__title">Équipe</h2>
            <p class="form-card__desc">Sélectionnez les opérateurs pour cette mission</p>

            <div class="team-selector">
              {activeEmployees.map(emp => (
                <label class="team-member-option">
                  <input type="checkbox" name="team" value={emp.id} />
                  <div class="team-member-option__content">
                    <div class="team-member-option__avatar">
                      {emp.firstname.charAt(0)}{emp.lastname.charAt(0)}
                    </div>
                    <div class="team-member-option__info">
                      <span class="team-member-option__name">{emp.firstname} {emp.lastname}</span>
                      <span class="team-member-option__detail">{emp.indicatif} · {emp.affectation}</span>
                    </div>
                  </div>
                </label>
              ))}
            </div>
          </div>
        </div>

        <div class="form-side">
          <div class="form-card form-card--sticky">
            <h2 class="form-card__title">Résumé</h2>

            <div class="summary">
              <div class="summary-item">
                <span class="summary-item__label">Nom</span>
                <span class="summary-item__value" id="summary-name">-</span>
              </div>
              <div class="summary-item">
                <span class="summary-item__label">Type</span>
                <span class="summary-item__value" id="summary-type">Intervention</span>
              </div>
              <div class="summary-item">
                <span class="summary-item__label">Date</span>
                <span class="summary-item__value" id="summary-date">-</span>
              </div>
              <div class="summary-item">
                <span class="summary-item__label">Équipe</span>
                <span class="summary-item__value" id="summary-team">0 opérateur(s)</span>
              </div>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn btn--primary">
                Créer la mission
              </button>
              <button type="button" class="btn btn--secondary">
                Enregistrer brouillon
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</AppLayout>

<script>
const form = document.getElementById('mission-form');
const nameInput = document.getElementById('name') as HTMLInputElement;
const dateInput = document.getElementById('date') as HTMLInputElement;
const typeInputs = document.querySelectorAll('input[name="type"]');
const teamCheckboxes = document.querySelectorAll('input[name="team"]');

const summaryName = document.getElementById('summary-name');
const summaryType = document.getElementById('summary-type');
const summaryDate = document.getElementById('summary-date');
const summaryTeam = document.getElementById('summary-team');

const typeLabels: Record<string, string> = {
  INTERVENTION: 'Intervention',
  SURVEILLANCE: 'Surveillance',
  ESCORT: 'Escorte',
  TRAINING: 'Entraînement',
  PATROL: 'Patrouille',
};

nameInput?.addEventListener('input', () => {
  if (summaryName) summaryName.textContent = nameInput.value || '-';
});

dateInput?.addEventListener('change', () => {
  if (summaryDate && dateInput.value) {
    const date = new Date(dateInput.value);
    summaryDate.textContent = date.toLocaleDateString('fr-FR', {
      day: 'numeric',
      month: 'long',
      year: 'numeric'
    });
  }
});

typeInputs.forEach(input => {
  input.addEventListener('change', (e) => {
    const value = (e.target as HTMLInputElement).value;
    if (summaryType) summaryType.textContent = typeLabels[value] || value;
  });
});

teamCheckboxes.forEach(cb => {
  cb.addEventListener('change', () => {
    const count = document.querySelectorAll('input[name="team"]:checked').length;
    if (summaryTeam) summaryTeam.textContent = `${count} opérateur(s)`;
  });
});

form?.addEventListener('submit', (e) => {
  e.preventDefault();
  alert('Mission créée avec succès !');
  window.location.href = '/app/missions';
});
</script>

<style lang="scss">
  @use '../../../styles/variables' as *;
  @use '../../../styles/mixins' as *;

  .new-mission-page {
    max-width: 1200px;
  }

  .page-header {
    margin-bottom: $spacing-xl;
  }

  .back-link {
    color: $color-text-secondary;
    text-decoration: none;
    font-size: $font-size-sm;
    display: inline-flex;
    align-items: center;
    gap: $spacing-xs;
    margin-bottom: $spacing-md;
    transition: color $transition-fast;

    &:hover {
      color: $color-text-primary;
    }
  }

  .back-link__icon {
    width: 16px;
    height: 16px;
    transition: transform $transition-fast;

    .back-link:hover & {
      transform: translateX(-3px);
    }
  }

  .page-title {
    font-size: $font-size-3xl;
    font-weight: $font-weight-semibold;
  }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr 360px;
    gap: $spacing-xl;

    @media (max-width: 900px) {
      grid-template-columns: 1fr;
    }
  }

  .form-main {
    display: flex;
    flex-direction: column;
    gap: $spacing-xl;
  }

  .form-card {
    @include glass-panel;
    border-radius: $radius-lg;
    padding: $spacing-xl;

    &--sticky {
      position: sticky;
      top: $spacing-xl;
    }
  }

  .form-card__title {
    font-size: $font-size-lg;
    font-weight: $font-weight-semibold;
    margin-bottom: $spacing-lg;
  }

  .form-card__desc {
    font-size: $font-size-sm;
    color: $color-text-tertiary;
    margin-top: -$spacing-md;
    margin-bottom: $spacing-lg;
  }

  .form-group {
    margin-bottom: $spacing-lg;

    &:last-child {
      margin-bottom: 0;
    }
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: $spacing-lg;
  }

  .form-label {
    display: block;
    font-size: $font-size-sm;
    font-weight: $font-weight-medium;
    color: $color-text-secondary;
    margin-bottom: $spacing-sm;
  }

  .form-input,
  .form-textarea,
  .form-select {
    width: 100%;
    padding: $spacing-md;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid $color-border;
    border-radius: $radius-md;
    color: $color-text-primary;
    font-size: $font-size-base;
    font-family: inherit;

    &:focus {
      outline: none;
      border-color: $color-accent;
    }

    &::placeholder {
      color: $color-text-muted;
    }
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-select {
    cursor: pointer;

    option {
      background: $color-bg-elevated;
    }
  }

  .type-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: $spacing-md;

    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .type-option {
    cursor: pointer;

    input {
      display: none;
    }

    input:checked + .type-option__content {
      border-color: $color-accent;
      background: rgba($color-accent, 0.1);
    }
  }

  .type-option__content {
    padding: $spacing-lg;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid $color-border;
    border-radius: $radius-md;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: $spacing-sm;
    transition: all $transition-fast;

    &:hover {
      border-color: rgba($color-accent, 0.5);
    }
  }

  .type-option__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: $color-accent;
  }

  .type-option__icon-svg {
    width: 28px;
    height: 28px;
  }

  .type-option__label {
    font-weight: $font-weight-medium;
    color: $color-text-primary;
  }

  .type-option__desc {
    font-size: $font-size-xs;
    color: $color-text-tertiary;
  }

  .team-selector {
    display: flex;
    flex-direction: column;
    gap: $spacing-sm;
    max-height: 400px;
    overflow-y: auto;
  }

  .team-member-option {
    cursor: pointer;

    input {
      display: none;
    }

    input:checked + .team-member-option__content {
      border-color: $color-accent;
      background: rgba($color-accent, 0.1);

      .team-member-option__avatar {
        background: $color-accent;
      }
    }
  }

  .team-member-option__content {
    display: flex;
    align-items: center;
    gap: $spacing-md;
    padding: $spacing-md;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid $color-border;
    border-radius: $radius-md;
    transition: all $transition-fast;

    &:hover {
      border-color: rgba($color-accent, 0.5);
    }
  }

  .team-member-option__avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: $font-size-sm;
    font-weight: $font-weight-semibold;
    color: $color-text-secondary;
    transition: all $transition-fast;
  }

  .team-member-option__info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .team-member-option__name {
    font-size: $font-size-sm;
    font-weight: $font-weight-medium;
    color: $color-text-primary;
  }

  .team-member-option__detail {
    font-size: $font-size-xs;
    color: $color-text-tertiary;
  }

  .summary {
    display: flex;
    flex-direction: column;
    gap: $spacing-md;
    margin-bottom: $spacing-xl;
  }

  .summary-item {
    display: flex;
    justify-content: space-between;
    padding-bottom: $spacing-sm;
    border-bottom: 1px solid $color-border;

    &:last-child {
      border-bottom: none;
    }
  }

  .summary-item__label {
    font-size: $font-size-sm;
    color: $color-text-tertiary;
  }

  .summary-item__value {
    font-size: $font-size-sm;
    color: $color-text-primary;
    font-weight: $font-weight-medium;
  }

  .form-actions {
    display: flex;
    flex-direction: column;
    gap: $spacing-sm;
  }

  .btn {
    width: 100%;
    padding: $spacing-md $spacing-lg;
    border: 1px solid $color-border;
    border-radius: $radius-md;
    font-size: $font-size-base;
    font-weight: $font-weight-semibold;
    cursor: pointer;
    transition: all $transition-fast;

    &--primary {
      background: $color-accent;
      border-color: $color-accent;
      color: #fff;

      &:hover {
        background: $color-accent-hover;
      }
    }

    &--secondary {
      background: transparent;
      color: $color-text-secondary;

      &:hover {
        background: rgba(255, 255, 255, 0.05);
        color: $color-text-primary;
      }
    }
  }
</style>
