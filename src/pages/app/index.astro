---
export const prerender = false;

import AppLayout from '../../layouts/AppLayout.astro';
import Badge from '../../components/ui/Badge.astro';
import { getAssets, getEmployees, getWeapons, getVehicles, getMissions, getAlerts, getStores } from '@/lib/db';

const user = Astro.locals.user!;

const employees = getEmployees();
const weapons = getWeapons();
const vehicles = getVehicles();
const assets = getAssets();
const missions = getMissions();
const alerts = getAlerts({ dismissed: false });
const stores = getStores();

const activeEmployees = employees.filter(e => e.active).length;

const weaponStats = {
  total: weapons.length,
  available: weapons.filter(w => w.state === 'AVAILABLE').length,
  checkedOut: weapons.filter(w => w.state === 'CHECKED_OUT').length,
  maintenance: weapons.filter(w => w.state === 'MAINTENANCE').length,
};

const vehicleStats = {
  total: vehicles.length,
  available: vehicles.filter(v => v.state === 'AVAILABLE').length,
  inUse: vehicles.filter(v => v.state === 'IN_USE').length,
  maintenance: vehicles.filter(v => v.state === 'MAINTENANCE').length,
};

const missionStats = {
  inProgress: missions.filter(m => m.status === 'IN_PROGRESS').length,
  planned: missions.filter(m => m.status === 'PLANNED').length,
  completed: missions.filter(m => m.status === 'COMPLETED').length,
};

const criticalAlerts = alerts.filter(a => a.severity === 'CRITICAL' || a.severity === 'HIGH');
const activeMissions = missions.filter(m => m.status === 'IN_PROGRESS' || m.status === 'BRIEFING');
const plannedMissions = missions.filter(m => m.status === 'PLANNED').slice(0, 3);

const storeStats = stores.map(store => ({
  ...store,
  employees: employees.filter(e => e.store_id === store.id).length,
  weapons: weapons.filter(w => w.store_id === store.id).length,
  vehicles: vehicles.filter(v => v.store_id === store.id).length,
}));

const missionTypeLabels: Record<string, string> = {
  INTERVENTION: 'Intervention',
  SURVEILLANCE: 'Surveillance',
  ESCORT: 'Escorte',
  TRAINING: 'Entra√Ænement',
  PATROL: 'Patrouille'
};

const missionStatusLabels: Record<string, string> = {
  PLANNED: 'Planifi√©e',
  BRIEFING: 'Briefing',
  IN_PROGRESS: 'En cours',
  COMPLETED: 'Termin√©e',
  CANCELLED: 'Annul√©e'
};

const missionStatusVariants: Record<string, 'success' | 'warning' | 'error' | 'info' | 'default'> = {
  PLANNED: 'default',
  BRIEFING: 'warning',
  IN_PROGRESS: 'info',
  COMPLETED: 'success',
  CANCELLED: 'error'
};

const alertSeverityLabels: Record<string, string> = {
  CRITICAL: 'Critique',
  HIGH: 'Haute',
  MEDIUM: 'Moyenne',
  LOW: 'Basse'
};

const alertTypeIcons: Record<string, string> = {
  EXPIRATION: '‚è∞',
  MAINTENANCE: 'üîß',
  LOW_STOCK: 'üì¶',
  MISSION_UPCOMING: 'üìã'
};

function formatTime(date: Date) {
  return new Intl.DateTimeFormat('fr-FR', {
    hour: '2-digit',
    minute: '2-digit'
  }).format(new Date(date));
}

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('fr-FR', {
    day: 'numeric',
    month: 'short',
    hour: '2-digit',
    minute: '2-digit'
  }).format(new Date(date));
}
