        </div>
      </div>

      <div class="stat-card">
        <div class="stat-card__header">
          <span class="stat-card__icon">üöó</span>
          <span class="stat-card__label">V√©hicules</span>
        </div>
        <div class="stat-card__value">{vehicleStats.available}<span class="stat-card__total">/{vehicleStats.total}</span></div>
        <div class="stat-card__breakdown">
          <span class="breakdown-item breakdown-item--info">{vehicleStats.inUse} en service</span>
          <span class="breakdown-item breakdown-item--warning">{vehicleStats.maintenance} maint.</span>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-card__header">
          <span class="stat-card__icon">üìã</span>
          <span class="stat-card__label">Missions</span>
        </div>
        <div class="stat-card__value">{missionStats.inProgress}</div>
        <div class="stat-card__breakdown">
          <span class="breakdown-item">{missionStats.planned} planifi√©es</span>
          <span class="breakdown-item breakdown-item--success">{missionStats.completed} termin√©es</span>
        </div>
      </div>
    </div>

    <div class="main-grid">
      <div class="panel missions-panel">
        <div class="panel__header">
          <h2 class="panel__title">Missions actives</h2>
          <a href="/app/missions" class="panel__link">Voir tout</a>
        </div>
        {activeMissions.length === 0 ? (
          <div class="panel__empty">Aucune mission en cours</div>
        ) : (
          <div class="missions-list">
            {activeMissions.map(mission => (
              <a href={`/app/missions/${mission.id}`} class="mission-card mission-card--active">
                <div class="mission-card__status">
                  <Badge variant={missionStatusVariants[mission.status]} size="sm">
                    {missionStatusLabels[mission.status]}
                  </Badge>
                </div>
                <h3 class="mission-card__name">{mission.name}</h3>
                <div class="mission-card__meta">
                  <span class="mission-card__type">{missionTypeLabels[mission.type]}</span>
                  {mission.started_at && (
                    <span class="mission-card__time">D√©but : {formatTime(mission.started_at)}</span>
                  )}
                </div>
              </a>
            ))}
          </div>
        )}

        {plannedMissions.length > 0 && (
          <>
            <div class="panel__divider"></div>
            <h3 class="panel__subtitle">√Ä venir</h3>
            <div class="upcoming-list">
              {plannedMissions.map(mission => (
                <a href={`/app/missions/${mission.id}`} class="upcoming-item">
                  <span class="upcoming-item__name">{mission.name}</span>
                  <span class="upcoming-item__date">{formatDate(mission.scheduled_at)}</span>
                </a>
              ))}
            </div>
          </>
        )}
      </div>

      <div class="panel alerts-panel">
        <div class="panel__header">
          <h2 class="panel__title">Alertes</h2>
          <a href="/app/alerts" class="panel__link">{alerts.length} actives</a>
        </div>
        {alerts.length === 0 ? (
          <div class="panel__empty panel__empty--success">Aucune alerte active</div>
        ) : (
          <div class="alerts-list">
            {alerts.slice(0, 5).map(alert => (
              <div class="alert-item" data-severity={alert.severity}>
                <span class="alert-item__icon">{alertTypeIcons[alert.type]}</span>
                <div class="alert-item__content">
                  <span class="alert-item__message">{alert.message}</span>
                  <span class="alert-item__severity">{alertSeverityLabels[alert.severity]}</span>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>

      <div class="panel stores-panel">
        <div class="panel__header">
          <h2 class="panel__title">Antennes</h2>
        </div>
        <div class="stores-grid">
          {storeStats.map(store => (
            <div class="store-card">
              <h4 class="store-card__name">{store.name}</h4>
              <span class="store-card__code">{store.code}</span>
              <div class="store-card__stats">
                <div class="store-stat">
                  <span class="store-stat__value">{store.employees}</span>
                  <span class="store-stat__label">agents</span>
                </div>
                <div class="store-stat">
                  <span class="store-stat__value">{store.weapons}</span>
                  <span class="store-stat__label">armes</span>
                </div>
                <div class="store-stat">
                  <span class="store-stat__value">{store.vehicles}</span>
                  <span class="store-stat__label">v√©hicules</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <div class="quick-actions">
      <h2 class="quick-actions__title">Actions rapides</h2>
      <div class="actions-grid">
        <a href="/app/missions/new" class="action-card">
          <span class="action-card__icon">üìã</span>
          <span class="action-card__label">Nouvelle mission</span>
        </a>
        <a href="/app/armory/checkout" class="action-card">
          <span class="action-card__icon">üî´</span>
          <span class="action-card__label">Sortie arme</span>
        </a>
        <a href="/app/vehicles" class="action-card">
          <span class="action-card__icon">üöó</span>
          <span class="action-card__label">R√©server v√©hicule</span>
        </a>
        <a href="/app/employees" class="action-card">
          <span class="action-card__icon">üë•</span>
          <span class="action-card__label">G√©rer effectifs</span>
        </a>
      </div>
    </div>
  </div>
</AppLayout>

<script>
function updateTime() {
  const now = new Date();
  const dateEl = document.getElementById('current-date');
  const timeEl = document.getElementById('current-time');

  if (dateEl) {
    dateEl.textContent = now.toLocaleDateString('fr-FR', {
      weekday: 'long',
      day: 'numeric',
      month: 'long',
      year: 'numeric'
    });
  }

  if (timeEl) {
    timeEl.textContent = now.toLocaleTimeString('fr-FR', {
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit'
    });
  }
}

updateTime();
setInterval(updateTime, 1000);
</script>

