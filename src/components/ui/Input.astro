---
interface Props {
  type?: string;
  name: string;
  label?: string;
  placeholder?: string;
  required?: boolean;
  disabled?: boolean;
  value?: string;
  error?: string;
  class?: string;
}

const {
  type = 'text',
  name,
  label,
  placeholder,
  required = false,
  disabled = false,
  value = '',
  error,
  class: className = ''
} = Astro.props;
---
<div class:list={['input-group', { 'input-group--error': error }, className]}>
  {label && (
    <label for={name} class="input-label">
      {label}
      {required && <span class="input-required">*</span>}
    </label>
  )}
  <input
    type={type}
    id={name}
    name={name}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    value={value}
    class="input-field"
  />
  {error && <span class="input-error">{error}</span>}
</div>

<style lang="scss">
  @use '../../styles/variables' as *;
  @use '../../styles/mixins' as *;

  .input-group {
    display: flex;
    flex-direction: column;
    gap: $spacing-sm;
  }

  .input-label {
    font-size: $font-size-sm;
    font-weight: $font-weight-medium;
    color: $color-text-secondary;
    margin-left: $spacing-xs;
  }

  .input-required {
    color: $color-error;
    margin-left: 2px;
  }

  .input-field {
    width: 100%;
    height: 52px;
    padding: 0 $spacing-md;
    font-family: $font-family-base;
    font-size: $font-size-base;
    color: $color-text-primary;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: $radius-lg;
    transition: all $transition-base;

    &::placeholder {
      color: $color-text-tertiary;
    }

    &:hover:not(:disabled) {
      background: rgba(0, 0, 0, 0.5);
      border-color: rgba(255, 255, 255, 0.2);
    }

    &:focus {
      outline: none;
      background: rgba(0, 0, 0, 0.8);
      border-color: $color-accent;
      box-shadow: 0 0 0 1px $color-accent, 0 0 15px rgba(212, 175, 55, 0.2);
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
  }

  .input-group--error {
    .input-field {
      border-color: $color-error;

      &:focus {
        box-shadow: 0 0 0 1px $color-error, 0 0 15px rgba(239, 68, 68, 0.2);
      }
    }
  }

  .input-error {
    font-size: $font-size-sm;
    color: $color-error;
    margin-left: $spacing-xs;
  }
</style>
